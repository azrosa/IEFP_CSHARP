@model Categorias
@{
    ViewData["Title"] = "Delete";
}
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Eliminar Categoria</h2>
            <hr />
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" placeholder="Insira o nome da unidade" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" placeholder="25 / 50 horas" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" class="form-control" disabled />
    </div>
    <div>
        <button type="submit" class="btn btn-primary" style="width:250px">Eliminar</button>
        <a asp-controller="Categorias" asp-action="Index" class="btn btn-secondary text-center" style="width:250px">
            Voltar à lista de Livros
        </a>
    </div>
</form>
