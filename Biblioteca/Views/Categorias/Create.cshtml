@model Categorias
@{
    ViewData["Title"] = "Create";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">Criar Categoria</h2>
            <hr />
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" placeholder="Insira o nome da unidade" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" placeholder="Insira um breve resumo do livro" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" class="form-control" />
        <span asp-validation-for="DataCriacao" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary" style="width:250px">Criar</button>
        <a asp-controller="Categorias" asp-action="Index" class="btn btn-secondary text-center" style="width:250px">
            Voltar à lista de Livros
        </a>
    </div>
</form>
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}